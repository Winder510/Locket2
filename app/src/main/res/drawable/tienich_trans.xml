<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E8E8E8"/>
            <padding
                android:bottom="-100dp"
                android:left="-100dp"
                android:right="-100dp"
                android:top="-100dp" />
        </shape>
    </item>

    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <size android:height="100dp" android:width="100dp"/>
            <solid android:color="@color/st_setting_color"/>
        </shape>
    </item>

    <item android:top="5dp" android:left="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <size android:height="50dp" android:width="50dp"/>
            <solid android:color="#E8E8E8"/>
        </shape>
    </item>

    <!-- Circle shape -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="70dp" />
            <stroke
                android:width="100dp"
                android:color="@color/bg_color" />
        </shape>
    </item>

    <!-- Center image -->
    <item android:drawable="@drawable/btn_add"
        android:gravity="center"
        android:width="60dp"
        android:height="60dp"/>
</layer-list>
