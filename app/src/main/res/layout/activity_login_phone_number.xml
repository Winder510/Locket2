<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:weightSum="3">


    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:background="@drawable/btn_oval_no_stroke"
        android:padding="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_left_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="NestedWeights">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Số điện thoại của bạn là gì?"
            android:fontFamily="@font/varelaround_regular"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="321dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="10"
            android:orientation="horizontal">

            <com.hbb20.CountryCodePicker
                android:id="@+id/login_countrycode"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                app:ccp_contentColor="@color/white"
                app:ccp_defaultPhoneCode="84"
                app:ccp_showNameCode="false"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/login_mobile_number"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="60dp"
                android:background="@drawable/login_edit_text"
                android:fontFamily="@font/varelaround_regular"
                android:hint="Số điện thoại"
                android:inputType="phone"
                android:paddingStart="15dp"
                android:textColor="@color/white"
                android:textColorHint="#888888"
                android:textSize="20sp"
               />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.925"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:background="@color/transparent_color"
            android:maxLines="2"
            android:text="Bằng cách nhận vào Tiếp tục, bạn đồng ý với chúng tôi Điều khoản Dịch vụ và Chính sách quyền riêng tư"
            android:fontFamily="@font/varelaround_regular"
            android:textAlignment="center"
            android:textColor="#888888"
            android:textSize="15sp" />

        <Button
            android:id="@+id/send_otp_btn"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/primary_color"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:text="SEND OTP"
            android:fontFamily="@font/varelaround_regular"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/login_progress_bar"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/primary_color" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>