<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".activities.SettingsActivity">
    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="right">
                <ImageButton
                    android:id="@+id/back_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_next_page"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/profile_image_view"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@color/bg_color"
                    android:src="@drawable/ic_user"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/profile_username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Họ tên"
                    android:fontFamily="@font/lexend"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Bạn bè"
                    android:fontFamily="@font/lexend"
                    android:textStyle="bold"
                    android:textColor="@color/st_setting_color"
                    android:textSize="20dp"
                    android:drawableLeft="@drawable/ic_search"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    />

                <Button
                    android:id="@+id/btnnguoiban"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_btn3"
                    android:baselineAligned="false"
                    android:padding="7dp"
                    android:scaleType="centerCrop"
                    android:text="10 người bạn"
                    android:fontFamily="@font/lexend"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/st_setting_color2"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_friends"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Tổng quát"
                    android:fontFamily="@font/lexend"
                    android:textStyle="bold"
                    android:textColor="@color/st_setting_color"
                    android:textSize="20dp"
                    android:drawableLeft="@drawable/ic_userintr"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="25dp"
                    />
                <Button
                    android:id="@+id/btnProfile_Image"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/custom_btn"
                    android:baselineAligned="false"
                    android:padding="7dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:text="Sửa ảnh hồ sơ"
                    android:fontFamily="@font/lexend"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/st_setting_color2"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_userpic"
                    android:drawableRight="@drawable/ic_choose"/>
                <Button
                    android:id="@+id/btnEditName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/btn_color"
                    android:baselineAligned="false"
                    android:padding="7dp"
                    android:scaleType="centerCrop"
                    android:text="Sửa tên"
                    android:fontFamily="@font/lexend"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/st_setting_color2"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_tag"
                    android:drawableRight="@drawable/ic_choose"/>
                <Button
                    android:id="@+id/btnEditBday"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/custom_btn2"
                    android:baselineAligned="false"
                    android:padding="7dp"
                    android:scaleType="centerCrop"
                    android:text="Sửa ngày sinh"
                    android:fontFamily="@font/lexend"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/st_setting_color2"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_party_balloons"
                    android:drawableRight="@drawable/ic_choose"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Giới thiệu"
                    android:fontFamily="@font/lexend"
                    android:textStyle="bold"
                    android:textColor="@color/st_setting_color"
                    android:textSize="20dp"
                    android:drawableLeft="@drawable/ic_heart"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="25dp"/>
                <Button
                    android:id="@+id/btnOpenTiktok"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/custom_btn"
                    android:baselineAligned="false"
                    android:padding="7dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="10dp"
                    android:text="TikTok"
                    android:fontFamily="@font/lexend"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/st_setting_color2"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_tiktok"
                    android:drawableRight="@drawable/ic_choose"/>
                <Button
                    android:id="@+id/btnOpenIG"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/btn_color"
                    android:baselineAligned="false"
                    android:padding="7dp"
                    android:scaleType="centerCrop"
                    android:text="Instagram"
                    android:fontFamily="@font/lexend"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/st_setting_color2"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_instagram"
                    android:drawableRight="@drawable/ic_choose"/>
                <Button
                    android:id="@+id/btnOpenTwitter"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/btn_color"
                    android:baselineAligned="false"
                    android:padding="7dp"
                    android:scaleType="centerCrop"
                    android:text="Twitter"
                    android:fontFamily="@font/lexend"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/st_setting_color2"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_twitter"
                    android:drawableRight="@drawable/ic_choose"/>

                <Button
                    android:id="@+id/btnOpenService"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/btn_color"
                    android:baselineAligned="false"
                    android:padding="7dp"
                    android:scaleType="centerCrop"
                    android:text="Điều khoản dịch vụ"
                    android:fontFamily="@font/lexend"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/st_setting_color2"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_service"
                    android:drawableRight="@drawable/ic_choose"/>
                <Button
                    android:id="@+id/btnOpenPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/custom_btn2"
                    android:baselineAligned="false"
                    android:padding="7dp"
                    android:scaleType="centerCrop"
                    android:text="Chính sách quyền riêng tư"
                    android:fontFamily="@font/lexend"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/st_setting_color2"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawableRight="@drawable/ic_choose"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Vùng nguy hiểm"
                    android:fontFamily="@font/lexend"
                    android:textStyle="bold"
                    android:textColor="@color/st_setting_color"
                    android:textSize="20dp"
                    android:drawableLeft="@drawable/ic_warning"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="25dp"
                    />

                <Button
                    android:id="@+id/logout_btn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/custom_btn3"
                    android:baselineAligned="false"
                    android:padding="7dp"
                    android:scaleType="centerCrop"
                    android:text="Đăng xuất"
                    android:fontFamily="@font/lexend"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/st_setting_color2"
                    android:textAlignment="textStart"
                    android:drawableLeft="@drawable/ic_logout"
                    android:drawableRight="@drawable/ic_choose"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/editName_View"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bg_color"
        android:orientation="vertical"
        android:weightSum="3"
        android:visibility="invisible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="NestedWeights"
            android:layout_marginTop="200dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:text="Sửa tên của bạn"
                android:fontFamily="@font/lexend"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="321dp"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/login_edit_text"
                android:hint="Tên của bạn"
                android:fontFamily="@font/lexend"
                android:paddingStart="15dp"
                android:textColor="@color/white"
                android:textColorHint="#888888"
                android:textSize="20sp"
                android:inputType="text"
                android:id="@+id/login_username"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.973"
            tools:layout_editor_absoluteX="0dp">

            <Button
                android:id="@+id/login_next_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/primary_color"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="Lưu"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/editBday_View"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/bg_color"
        android:orientation="vertical"
        android:weightSum="3"
        android:visibility="invisible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="NestedWeights"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:text="Ngày sinh của bạn là ngày nào?"
                android:fontFamily="@font/lexend"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="321dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:text="Hãy thông báo cho chúng tôi để chúng tôi cùng ăn mừng!"
                android:fontFamily="@font/lexend"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="321dp"
                android:layout_gravity="center"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/login_edit_text"
                android:hint="Ngày Sinh"
                android:fontFamily="@font/lexend"
                android:paddingStart="15dp"
                android:textColor="@color/white"
                android:textColorHint="#888888"
                android:textSize="20sp"
                android:inputType="text"
                android:id="@+id/login"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.973"
            tools:layout_editor_absoluteX="0dp">

            <Button
                android:id="@+id/saveBday_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/primary_color"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="Lưu"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>