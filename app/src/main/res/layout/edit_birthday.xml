<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:weightSum="3">
    <View
        android:layout_width="70dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"></View>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:text="Ngày sinh của bạn là ngày nào"
            android:fontFamily="@font/varelaround_regular"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hãy thông báo cho chúng tôi để chúng tôi cùng ăn mừng!"
            android:fontFamily="@font/varelaround_regular"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:padding="20dp">

        <EditText
            android:id="@+id/monthBday_edit"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/login_edit_text"
            android:hint="tháng"
            android:fontFamily="@font/varelaround_regular"
            android:inputType="text"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:textColorHint="#888888"
            android:textSize="20sp"
            android:layout_marginRight="15dp"/>

        <EditText
            android:id="@+id/dateBday_edit"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/login_edit_text"
            android:hint="ngày"
            android:fontFamily="@font/varelaround_regular"
            android:inputType="text"
            android:paddingStart="15dp"
            android:textColor="@color/white"
            android:textColorHint="#888888"
            android:textSize="20sp" />

    </LinearLayout>
    <Button
        android:id="@+id/btnSave_Bday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_color"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="Tiếp tục"
        android:fontFamily="@font/varelaround_regular"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginBottom="15dp"/>
</LinearLayout>
